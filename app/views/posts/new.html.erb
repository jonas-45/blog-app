<%= form_with model: @post, url: user_posts_path, local: true, class: "form" do |form| %>
  <h3>Add New Post</h3>
  <div class="form-items">
    <%= form.label :title  %></br>
  <%= form.text_field :title, required: true, class: "form_title" %>
</div><br>
<div class="form-items">
  <%= form.label :text %></br>
<%= form.text_area :text, required: true, class: "form_msg" %>
</div><br>
<div>
  <%= form.submit "Create post", class: "btn" %>
</div>
<% end %>